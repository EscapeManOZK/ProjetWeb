            Année 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Annee)
        </dd>
        <dt>
            Extrait
        </dt>
        <dd>
            <audio src="@Url.Action("Audio","Recherche",new {id = Model.Code_Oeuvre})" controls></audio>
