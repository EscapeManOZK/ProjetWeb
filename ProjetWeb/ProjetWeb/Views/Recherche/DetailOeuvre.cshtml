@model ProjetWeb.Models.Oeuvre

@{
    ViewBag.Title = "Details";
    
}

<h2>Details</h2>

<div>
    <h4>Oeuvres</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Titre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titre_Oeuvre)
        </dd>

        <dt>
            Musicien: 
        </dt>

        <dd>
            @Html.ActionLink("Details", "DetailMusicien", new { id = Model.Code_Oeuvre, nom = Model.Titre_Oeuvre})
