@model IEnumerable<ProjetWeb.Models.Instrumentation>

@{
    ViewBag.Title = "Detail";
}

<h2>Oeuvre de L'instrument:  </h2> <p src="@Url.Action("NomInstrument", "Recherche",Model.First().Code_Instrument)" />

    <table class="table">
        <tr>
            <th>
                Titre Oeuvre
            </th>
            <th>
               Detail
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Oeuvre.Titre_Oeuvre)
                </td>
                <td>
                   @Html.ActionLink("Details", "DetailOeuvre", new { id = item.Oeuvre.Code_Oeuvre })
                </td>
                <td></td>
            </tr>
        }

    </table>
